<tr>
  <td><%= get_index_page product_counter %></td>
  <td><%= link_to product.name, product %></td>
  <td><span><%= number_to_vnd product.price %></span></td>
  <td>
    <div class="btn-group btn-group-sm" id="<%= "form-combo-#{product.id}" %>">
      <%= form_for product, remote: true, authenticity_token: true do |f| %>
        <div class="row">
          <div class="col">
            <%= f.select :status, enum_options_for_select(Product, :status), {include_blank: false},
            onChange: "javascript: this.form.submit_form.click();", class: "form-control" %>
          </div>
        </div>
        <%= f.submit name: :submit_form, remote: true, class: "d-none" %>
      <% end %>
    </div>
  </td>
  <td>
    <%= link_to product, class: "btn btn-info btn-sm" do %>
      <i class="fa fa-eye"></i>
    <% end %>
    <%= link_to edit_product_path(product), class: "btn btn-warning btn-sm" do %>
      <i class="fa fa-edit"></i>
    <% end %>
    <%= link_to product, method: :delete, data: {confirm: t(".sure")}, class: "btn btn-danger btn-sm" do %>
      <i class="fa fa-trash-alt"></i>
    <% end %>
  </td>
</tr>
