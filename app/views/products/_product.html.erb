<tr>
  <td><%= image_tag product.image.url if product.image? %></td>
  <td>
    <%= link_to product.name, product %>
  </td>
  <td><span><%= product.price %></span></td>
  <td><span><%= product.allowed? ? t(".allowed") : t(".unallowed")  %></span></td>
  <td>
    <%= link_to t(".delete"), product, method: :delete,
  data: { confirm: t(".sure") } %> | 
  <%= link_to t(".show"), product %> |
  <%= link_to t(".edit"), edit_product_path(product) %>
  </td>
</tr>
