<%= form_for @product do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.label t ".name" %>
  <%= f.text_field :name, class: "form-control mb-1" %>

  <%= f.label t ".price" %>
  <%= f.number_field :price, class: "form-control mb-1" %>

  <%= f.label t ".image" %>
  <%= f.file_field :image , class: "form-control mb-1" %>

  <%= f.label t ".status" %><br/>
  <%= f.radio_button :status, :allowed, checked: "checked" %> <%= t ".allowed" %><br/>
  <%= f.radio_button :status, :unallowed %> <%= t ".unallowed" %><br/>

  <%= f.submit t(".submit"), class: "btn btn-primary mt-1" %>
<% end %>
