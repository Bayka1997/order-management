<% provide :title, t(".all_product") %>
<div>
<h1><%= t(".all_product") %></h1>
<%= link_to t(".add_product"), new_product_path %>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="main-box no-header clearfix">
      <div class="main-box-body clearfix">
        <div class="table-responsive">
          <table class="table user-list">
            <thead>
              <tr>
                <th><span><%= t ".image" %></span></th>
                <th><span><%= t ".name" %></span></th>
                <th><span><%= t ".price" %></span></th>
                <th><span><%= t ".status" %></span></th>
                <th><span><%= t ".action" %></span></th>
              </tr>
            </thead>
              <tbody>
                <% @products.each do |product| %>
                  <%= render product %>
                <% end %>
              </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%= paginate @products, theme: Settings.theme_config %>
