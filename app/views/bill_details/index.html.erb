<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 mb-4">
    <div class="card card-small h-100">
      <div class="card-header border-bottom">
        <h6 class="m-0 mb-4"><%= "#{@bill.table_number} - Anh(chá»‹) #{@bill.name}" %></h6>
        <% if current_user.waiter? %>
          <%= link_to t(".payment"), payment_path(id: @bill), class: "btn btn-success btn-sm" %>
          <%= link_to t(".cancle"), @bill, method: :delete,
  data: {confirm: t(".sure")}, class: "btn btn-danger btn-sm" %>
          <%= link_to t(".add_product"), show_products_path(bill_id: @bill), {"data-toggle": "modal", "data-target": "#model_show", remote: true, class: "btn btn-info"} %>
          <%= link_to t(".add_combo"), show_combos_path(bill_id: @bill), {"data-toggle": "modal", "data-target": "#model_show", remote: true, class: "btn btn-info"} %>
        <% end %>
      </div>
    </div>
  </div>

  <% if current_user.waiter? %>
    <div class="col-lg-12 col-md-12 col-sm-12 mb-4">
      <div class="card card-small h-100">
        <div class="card-header border-bottom">
          <h6 class="m-0"><%= t ".product_used" %></h6>
        </div>
        <div class="card-body d-flex py-0">
          <table class="table mb-0">
            <thead class="bg-light">
              <tr>
                <th scope="col" class="border-0"><%= t ".stt" %></th>
                <th scope="col" class="border-0"><%= t ".name_product" %></th>
                <th scope="col" class="border-0"><%= t ".count" %></th>
                <th scope="col" class="border-0"><%= t ".price" %></th>
                <th scope="col" class="border-0"><%= t ".action" %></th>
              </tr>
            </thead>
            <tbody id="list_product_in_bill">
              <%= render "bill_details" %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% else %>
    <%= render "chef" %>
  <% end %>
</div>

<div class="modal fade" id="model_show">
  <div class="modal-dialog modal-dialog-centered width-80">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"></h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t ".close" %></button>
      </div>
    </div>
  </div>
</div>
