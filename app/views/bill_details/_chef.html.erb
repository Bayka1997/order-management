<div class="card-body d-flex py-0">
  <table class="table mb-0">
    <thead class="bg-light">
      <tr>
        <th scope="col" class="border-0"><%= t ".stt" %></th>
        <th scope="col" class="border-0"><%= t ".name_product" %></th>
        <th scope="col" class="border-0"><%= t ".count" %></th>
      </tr>
    </thead>
    <tbody id="<%= "bill-detail-chef-#{@bill.id}" %>">
      <% @bill_details.order_by_type.each_with_index do |bill_detail, key| %>
        <tr id="<%= "bill-detail-#{@bill.id}-#{bill_detail.id}" %>" >
          <td><span><%= get_index(key) %></span></td>
          <td><span><%= link_to bill_detail.product? ? bill_detail.product_name : bill_detail.combo_name,
        bill_detail.product? ? bill_detail.product : bill_detail.combo %></span></td>
          <td id="<%= "count-bill-detail-#{@bill.id}-#{bill_detail.id}" %>" ><%= bill_detail.count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
