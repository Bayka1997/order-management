<div class="row">
  <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
    <div class="card card-small mb-4 pt-3">
      <div class="card-header border-bottom text-center">
        <div class="mb-3 mx-auto">
          <h4 class="mb-4"><%= @bill.name %></h4>
          <div class="d-flex justify-content-center">
            <%= form_for @bill do |f| %>
              <%= f.hidden_field :status, value: Settings.unactive %>
              <%= f.submit t(".payment"), class: "btn btn-success btn-sm" %>
            <% end %>
            <%= link_to t(".cancle"), @bill, method: :delete,
  data: {confirm: t(".sure")}, class: "btn btn-danger btn-sm ml-1" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-8 col-md-6 col-sm-12 mb-4">
    <div class="card card-small h-100">
      <div class="card-header border-bottom">
        <h6 class="m-0"><%= t ".payment" %></h6>
      </div>
      <div class="card-body d-flex py-0">
        <table class="table user-list">
          <thead>
            <tr>
              <th><span><%= t ".stt" %></span></th>
              <th><span><%= t ".name" %></span></th>
              <th><span><%= t ".price" %></span></th>
              <th><span><%= t ".count" %></span></th>
              <th><span><%= t ".sum_price" %></span></th>
            </tr>
          </thead>
          <tbody>
            <% @bill.bill_details.each_with_index do |bill_detail, key| %>
              <tr>
                <td><span><%= get_index key %></span></td>
                <td><span><%= bill_detail.product? ? bill_detail.product_name : bill_detail.combo_name %></span></td>
                <td><span><%= number_to_vnd bill_detail.price %></span></td>
                <td><span><%= bill_detail.count %></span></td>
                <td><span><%= number_to_vnd get_price bill_detail %></span></th>
              </tr>
            <% end %>
            <tr>
              <td colspan="3" ><span><%= t ".sum_price" %>:</span></td>
              <td><span><%= sum_prduct @bill %></span></td>
              <td><span><%= number_to_vnd sum_price @bill %></span></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>