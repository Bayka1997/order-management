<%= form_for @bill do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.label t ".name" %>
  <%= f.text_field :name, class: "form-control mb-1" %>

  <%= f.hidden_field :status, value: Settings.status_bill %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :table_id, value: @table.id %>

  <%= f.submit t(".submit"), class: "btn btn-primary mt-1" %>
<% end %>
