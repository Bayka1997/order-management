<div class="row">
  <div class="col">
    <div class="card card-small mb-4">
      <div class="card-header border-bottom">
        <%= link_to new_table_path, class: "btn btn-success btm-sm" do %>
          <i class="fa fa-plus-circle"></i>
        <% end %>
      </div>
      <div class="card-body p-0 pb-3 text-center">
        <table class="table mb-0">
          <thead class="bg-light">
            <tr>
              <th scope="col" class="border-0"><%= t ".stt" %></th>
              <th scope="col" class="border-0"><%= t ".number" %></th>
              <th scope="col" class="border-0"><%= t ".type" %></th>
              <th scope="col" class="border-0"><%= t ".action" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "table", collection: @tables %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
