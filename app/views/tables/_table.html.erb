<tr>
  <td><span><%= get_index_page table_counter %></span></td>
  <td><span><%= table.number %></span></td>
  <td><span><%= raw table.description %></span></td>
  <td><span><%= table.amount_chair %></span></td>
  <td>
    <%= link_to table, class: "btn btn-info btn-sm" do %>
      <i class="fa fa-eye"></i>
    <% end %>
    <%= link_to edit_table_path(table), class: "btn btn-warning btn-sm" do %>
      <i class="fa fa-edit"></i>
    <% end %>
    <%= link_to table, method: :delete, data: {confirm: t(".sure")}, class: "btn btn-danger btn-sm" do %>
      <i class="fa fa-trash-alt"></i>
    <% end %>
  </td>
</tr>
