<% provide :title, t(".all_table") %>

<div class="row">
  <div class="col">
    <div class="card card-small mb-4">
      <div class="card-body p-0 m-3 text-left">
        <div class="row">
          <div class="col">
            <%= label_tag t(".find_by_name_table") %>
            <%= text_field_tag :name, params[:name].present? ? params[:name] : "", class: "form-control", placeholder: "#{t ".find_by_name_table"}", id: "find_by_name_table" %>
          </div>

          <div class="col">
            <%= label_tag t(".find_by_type_table") %>
            <%= select_tag :role, options_for_select(enum_options_for_select(Table, :amount_chair).insert(0, "")), class: "form-control", id: "find_by_type_table" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="list_table_manager">
  <%= render "tables/list_table" %>
</div>

<%= paginate @tables, theme: Settings.theme_config %>
