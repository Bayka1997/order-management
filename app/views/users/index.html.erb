<% provide :title, t(".all_user") %>

<div class="row">
  <div class="col">
    <div class="card card-small mb-4">
      <div class="card-body p-0 m-3 text-left">
        <div class="row">
          <div class="col">
            <%= label_tag t(".find_by_name") %>
            <%= text_field_tag :name, params[:name].present? ? params[:name] : "", class: "form-control", placeholder: "#{t ".find_by_name"}", id: "find_by_name_user" %>
          </div>

          <div class="col">
            <%= label_tag t(".find_by_role") %>
            <%= select_tag :role, options_for_select(enum_options_for_select(User, :role).insert(0, "")), class: "form-control", id: "find_by_role_user" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="list_user">
  <%= render "users/list_user" %>
</div>
