<% provide :title, t(".all_user") %>

<div class="row">
  <div class="col">
    <div class="card card-small mb-4">
      <div class="card-header border-bottom">
        <%= link_to t(".new_user"), new_user_path %>
      </div>
      <div class="card-body p-0 pb-3 text-center">
        <table class="table mb-0">
          <thead class="bg-light">
            <tr>
              <th scope="col" class="border-0"><%= t ".stt" %></th>
              <th scope="col" class="border-0"><%= t ".username" %></th>
              <th scope="col" class="border-0"><%= t ".phone" %></th>
              <th scope="col" class="border-0"><%= t ".create_at" %></th>
              <th scope="col" class="border-0"><%= t ".update_at" %></th>
              <th scope="col" class="border-0"><%= t ".action" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "user", collection: @users %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%= paginate @users, theme: Settings.theme_config %>
