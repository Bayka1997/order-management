<tr>
  <td><%= get_index_page combo_counter %></td>
  <td><%= link_to combo.name, combo %></td>
  <td><span><%= combo.price %></span></td>
  <td>
    <div class="btn-group btn-group-sm" id="<%= "form-combo-#{combo.id}" %>">
      <%= form_for combo, remote: true, authenticity_token: true do |f| %>
          <%= f.hidden_field :id, value: combo.id %>
        <div class="custom-control custom-toggle custom-toggle-sm mb-1">
          <%= f.check_box :status, {class: "custom-control-input", id: "combo-#{combo.id}",checked: combo.allowed?,
  onchange: "$('#submit_combo_#{combo.id}').click();", include_hidden: false}, combo.status %>
          <label class="custom-control-label" for="<%= "combo-#{combo.id}" %>"><%= t ".checked" %></label>
        </div>
        <%= f.submit id: "submit_combo_#{combo.id}", class: "d-none" %>
      <% end %>
    </div>
  </td>
  <td>
    <%= link_to combo, class: "btn btn-info btn-sm" do %>
      <i class="fa fa-eye"></i>
    <% end %>
    <%= link_to edit_combo_path(combo), class: "btn btn-warning btn-sm" do %>
      <i class="fa fa-edit"></i>
    <% end %>
    <%= link_to combo, method: :delete, data: {confirm: t(".sure")}, class: "btn btn-danger btn-sm" do %>
      <i class="fa fa-trash-alt"></i>
    <% end %>
  </td>
</tr>
