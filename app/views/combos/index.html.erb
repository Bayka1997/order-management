<% provide :title, t(".all_combo") %>

<div class="row">
  <div class="col">
    <div class="card card-small mb-4">
      <div class="card-header border-bottom">
        <%= link_to t(".new_combo"), new_combo_path %>
      </div>
      <div class="card-body p-0 pb-3 text-center">
        <table class="table mb-0">
          <thead class="bg-light">
            <tr>
              <th scope="col" class="border-0"><%= t ".stt" %></th>
              <th scope="col" class="border-0"><%= t ".name" %></th>
              <th scope="col" class="border-0"><%= t ".price" %></th>
              <th scope="col" class="border-0"><%= t ".status" %></th>
              <th scope="col" class="border-0"><%= t ".action" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "combo", collection: @combos %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%= paginate @combos, theme: Settings.theme_config %>
