<% provide :title, t(".combos") %>

<div class="row">
  <div class="col">
    <div class="card card-small mb-4">
      <div class="card-body p-0 m-3 text-left">
        <div class="row">
          <div class="col">
            <%= label_tag t(".find_by_name_combo") %>
            <%= text_field_tag :name, params[:name].present? ? params[:name] : "", class: "form-control", placeholder: "#{t ".find_by_name_combo"}", id: "find_by_name_combo" %>
          </div>

          <div class="col">
            <%= label_tag t(".find_by_status_combo") %>
            <%= select_tag :status, options_for_select(enum_options_for_select(Combo, :status).insert(0, "")), class: "form-control", id: "find_by_status_combo" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="list_combo">
  <%= render "combos/list_combo" %>
</div>
