<aside class="main-sidebar col-12 col-md-3 col-lg-2 px-0">
  <div class="main-navbar">
    <nav class="navbar align-items-stretch navbar-light bg-white flex-md-nowrap border-bottom p-0">
      <a class="navbar-brand w-100 mr-0" href="#" style="line-height: 25px;">
        <div class="d-table m-auto">
          <%= image_tag "/images/avatars/avata.jpg", class: "d-inline-block align-top mr-1", id: "main-logo" %>
          <span class="d-none d-md-inline ml-1"><%= enum_l(current_user, :role) if current_user.presence %></span>
        </div>
      </a>
      <a class="toggle-sidebar d-sm-inline d-md-none d-lg-none">
        <i class="material-icons">&#xE5C4;</i>
      </a>
    </nav>
  </div>
  <form action="#" class="main-sidebar__search w-100 border-right d-sm-flex d-md-none d-lg-none">
    <div class="input-group input-group-seamless ml-3">
      <div class="input-group-prepend">
        <div class="input-group-text">
          <i class="fas fa-search"></i>
        </div>
      </div>
      <input class="navbar-search form-control" type="text" placeholder="Search for something..." aria-label="Search"> </div>
  </form>
  <div class="nav-wrapper">
    <ul class="nav flex-column">
      
      <% if current_user %>
        <% if current_user.manager? %>

          <li class="nav-item">
            <%= link_to root_path, class: check_sesion(:home) ? "nav-link active" : "nav-link" do %>
              <i class="material-icons">note_add</i>
              <span><%= t ".home" %></span>
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to combos_path, class: check_sesion(:combo) ? "nav-link active" : "nav-link", other_param: params[:other] do %>
              <i class="material-icons">view_module</i>
              <span><%= t ".combo" %></span>
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to products_path, class: check_sesion(:product) ? "nav-link active" : "nav-link" do %>
              <i class="material-icons">view_module</i>
              <span><%= t ".product" %></span>
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to users_path, class: check_sesion(:user) ? "nav-link active" : "nav-link" do %>
              <i class="material-icons">note_add</i>
              <span><%= t ".user" %></span>
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to tables_path, class: check_sesion(:table) ? "nav-link active" : "nav-link" do %>
              <i class="material-icons">view_module</i>
              <span><%= t ".table" %></span>
            <% end %>
          </li>
        <% elsif current_user.chef? %>
          <li class="nav-item">
            <%= link_to list_bill_path, class: check_sesion(:list_bill) ? "nav-link active" : "nav-link" do %>
              <i class="material-icons">vertical_split</i>
              <span><%= t ".list_bill" %></span>
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to bills_path, class: check_sesion(:bill) ? "nav-link active" : "nav-link" do %>
              <i class="material-icons">note_add</i>
              <span><%= t ".bill" %></span>
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to list_bill_path, class: check_sesion(:list_bill) ? "nav-link active" : "nav-link" do %>
              <i class="material-icons">vertical_split</i>
              <span><%= t ".list_bill" %></span>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</aside>
